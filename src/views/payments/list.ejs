<!-- Page content -->
<div id="page-content">
    <!-- Quick Stats -->
    <div class="row text-center">
        <div class="col-sm-6">
            <a href="/payments/notification" class="widget widget-hover-effect2">
                <div class="widget-extra themed-background-success">
                    <h4 class="widget-content-light"><strong>Thông báo</strong> toàn bộ</h4>
                </div>
                <div class="widget-extra-full"><span class="h2 text-success animation-expandOpen"><i
                                class="fa fa-paypal"></i></span></div>
            </a>
        </div>
        <div class="col-sm-6">
            <a href="javascript:void(0)" class="widget widget-hover-effect2">
                <div class="widget-extra themed-background-dark">
                    <h4 class="widget-content-light"><strong>Tất cả</strong> bệnh nhân</h4>
                </div>
                <div class="widget-extra-full"><span class="h2 themed-color-dark animation-expandOpen"><%= patients.length %></span>
                </div>
            </a>
        </div>
    </div>
    <!-- END Quick Stats -->

    <!-- All Products Block -->
    <div class="block full">
        <!-- All Products Title -->
        <div class="block-title">
            <h2><strong>Tất cả</strong> sản phẩm</h2>
        </div>
        <!-- END All Products Title -->
        <%- include('../partials/messages') %>
        <!-- All Products Content -->
        <table id="ecom-products" class="table table-bordered table-striped table-vcenter">
            <thead>
            <tr>
                <th class="text-center" style="width: 70px;">Mã</th>
                <th>Tên</th>
                <th class="hidden-xs text-center">CMND</th>
                <th class="hidden-xs text-center">Trạng thái</th>
                <th class="hidden-xs text-center">Địa chỉ</th>
                <th class="hidden-xs text-center">Bệnh viện</th>
                <th class="hidden-xs text-center">Tiền nợ</th>
                <th class="hidden-xs text-center">Tiền cho phép</th>
                <th class="text-center">Hành động</th>
            </tr>
            </thead>
            <tbody>
            <% patients.forEach(function(patient,index) { %>
                <tr>
                    <td class="text-center"><a href="/patients?id=<%= patient.id %>"><strong><%= index +1 %></strong></a></td>
                    <td><a href="/patients?id=<%= patient.id %>"><%= patient.name %></a></td>
                    <td><a href="/patients?id=<%= patient.id %>"><%= patient.identity %></a></td>
                    <%if(patient.status !==null){%>
                        <td class="text-center hidden-xs"><strong ><%= patient.status!=='-1'?'F'+patient.status:'Khỏi bệnh' %></strong></td>
                    <%} else {%>
                        <td class="hidden-xs text-center"><strong ></strong></td>
                    <%}%>
                    <td class="hidden-xs text-center"><%=  patient.ward?.name + ", "+patient.district?.name+", " + patient.province?.name  %></td>
                    <td class="hidden-xs text-center"><%= patient.hospital?.name %></td>
                    <td class="hidden-xs text-center"><%= patient.debt %></td>
                    <td class="hidden-xs text-center"><%= patient.credit %></td>
                    <td class="text-center">
                        <div class="btn-group btn-group-xs">
                            <a href="/payments/notification/<%= patient.id %>" data-toggle="tooltip" title="Nhắc nhở thanh toán" class="btn btn-primary"><i class="fa fa-paypal"></i></a>
                            <!--                        <a href="javascript:void(0)" data-toggle="tooltip" title="Delete" class="btn btn-xs btn-danger"><i class="fa fa-times"></i></a>-->
                        </div>
                    </td>
                </tr>
            <% }); %>
            </tbody>
        </table>
        <!-- END All Products Content -->
    </div>
    <!-- END All Products Block -->
</div>
<script>  </script>

<script src="/js/pages/ecomPatient.js"></script>
<script>$(function(){ EcomPatients.init(); });</script>
